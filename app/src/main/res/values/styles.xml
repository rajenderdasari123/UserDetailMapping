<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="TextStyle">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/tv_color</item>
    <item name="android:textSize">@dimen/dimen_16dp</item>
    <item name="android:layout_marginStart">@dimen/dimen_5dp</item>
    <item name="android:layout_marginTop">@dimen/dimen_3dp</item>
  </style>

  <style name="AddressStyle">
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textColor">@color/address_text_color</item>
    <item name="android:textSize">@dimen/dimen_14dp</item>
    <item name="android:paddingStart">@dimen/dimen_8dp</item>
    <item name="android:paddingTop">@dimen/dimen_hint_padding</item>
    <item name="android:paddingEnd">@dimen/dimen_8dp</item>
    <item name="android:paddingBottom">@dimen/dimen_hint_padding</item>
  </style>

</resources>